# Production Dockerfile - Only builds static files
# The built files will be mounted to main nginx container
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build for production (skip TypeScript checking for faster builds)
RUN npm run build:prod

# Final stage - just keep the dist folder
FROM scratch
COPY --from=builder /app/dist /dist

# Database Configuration
POSTGRES_USER=accounting_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_MIN_16_CHARS
POSTGRES_DB=accounting_db

# Backend Configuration
DATABASE_URL=postgresql://accounting_user:CHANGE_THIS_STRONG_PASSWORD_MIN_16_CHARS@db:5432/accounting_db
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_MIN_32_CHARS
DATA_ENCRYPTION_KEY=CHANGE_THIS_DATA_ENCRYPTION_KEY_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (comma-separated URLs)
# For production, set to your actual frontend URL(s)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Environment
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Security Headers
ENABLE_SECURITY_HEADERS=true

# Database Port Exposure (leave empty in production for security)
# Only set this if you need direct database access during development
POSTGRES_PORT=

# Nginx Port Configuration
# HTTP port (default: 80)
# If using Synology reverse proxy, set to 8080
NGINX_HTTP_PORT=80
# HTTPS port (default: 443)
# If using Synology reverse proxy, HTTPS is handled by Synology
NGINX_HTTPS_PORT=443

# Vite Allowed Hosts (comma-separated hostnames)
# Protects against DNS rebinding attacks
# For production, set to your actual domain(s)
VITE_ALLOWED_HOSTS=localhost,127.0.0.1

# Synology NAS Reverse Proxy Setup:
# - Synology handles HTTPS on port 443
# - Application listens on HTTP port 8080
# - Set NGINX_HTTP_PORT=8080
# - Set ALLOWED_ORIGINS to your HTTPS domain
# - Set VITE_ALLOWED_HOSTS to include your domain
# Example for Synology:
# NGINX_HTTP_PORT=8080
# ALLOWED_ORIGINS=https://yourdomain.com
# VITE_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com


TURNSTILE_SECRET_KEY=your-turnstile-secret-key-change-this-in-production-please
WEBSITE_TURNSTILE_KEY=your-turnstile-site-key-change-this-in-production-please